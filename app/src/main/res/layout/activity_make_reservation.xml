<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark"
        android:orientation="vertical"
        android:gravity="center_horizontal">
    <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/books"
            android:layout_height="100dp"
    />

    <EditText
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_account_box_black_24dp"
            android:ems="10"
            android:textColorHint="@android:color/holo_blue_bright"
            android:id="@+id/txtName" android:hint="Name"
            android:textColor="@android:color/holo_blue_bright"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_account_box_black_24dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:textColorHint="@android:color/holo_blue_bright"
            android:id="@+id/txtSurname" android:hint="Surname"
            android:textColor="@android:color/holo_blue_bright"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:id="@+id/txtStartAt" android:hint="Start At"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textColor="@android:color/holo_blue_bright"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Finish At"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20dp"
            android:layout_marginTop="20dp"

            android:textColorHint="@android:color/holo_blue_bright"
            android:ems="10"
            android:id="@+id/txtFinishAt"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_marginTop="20dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/txtPhoneNo"/>

    <EditText
            android:textColorHint="@android:color/holo_blue_bright"
            android:textColor="@android:color/holo_blue_bright"
            android:hint="BOOK ID"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtReservationID"/>
    <Button
            android:text="ADD"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonInsert"
            android:textSize="20sp"
            android:background="@drawable/custom_button2"/>
    <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/txtResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>




        </ScrollView>



    </LinearLayout>




</LinearLayout>