<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:textColor="@android:color/holo_blue_bright"

            android:text="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtFinish" app:layout_constraintStart_toEndOf="@+id/labelLocation"
            android:layout_marginStart="64dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txtStart"/>
    <TextView
            android:textColor="@android:color/holo_blue_bright"
            android:text="BOOK ID :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblBookID2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            tools:layout_editor_absoluteY="198dp"/>
    <TextView

            android:textColor="@android:color/holo_blue_bright"
            android:layout_width="125dp"
            android:text="RESERVATION ID :"
            android:textAlignment="viewStart"
            android:layout_height="23dp"
            android:id="@+id/labelID" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:textColor="@android:color/holo_blue_bright"

            android:text="FIRST NAME :"
            android:layout_width="92dp"
            android:layout_height="18dp"
            android:id="@+id/labelName" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/labelID"/>
    <TextView
            android:textColor="@android:color/holo_blue_bright"

            android:text="SURNAME :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelAuthor" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/labelName"/>
    <TextView
            android:textColor="@android:color/holo_blue_bright"

            android:text="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSurname" app:layout_constraintStart_toEndOf="@+id/labelAuthor"
            android:layout_marginStart="56dp"
            app:layout_constraintTop_toBottomOf="@+id/txtName" android:layout_marginTop="13dp"/>
    <TextView
            android:textColor="@android:color/holo_blue_bright"

            android:text="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtReservationID" app:layout_constraintStart_toEndOf="@+id/labelID"
            android:layout_marginStart="4dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:textColor="@android:color/holo_blue_bright"

            android:text="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtName" app:layout_constraintStart_toEndOf="@+id/labelName"
            android:layout_marginStart="36dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/txtReservationID"/>
    <TextView
            android:textColor="@android:color/holo_blue_bright"

            android:text="START AT:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelCategory" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/labelAuthor" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:textColor="@android:color/holo_blue_bright"

            android:text="FINISH AT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelLocation" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/labelCategory" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:textColor="@android:color/holo_blue_bright"

            android:text="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtStart" app:layout_constraintStart_toEndOf="@+id/labelCategory"
            android:layout_marginStart="60dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/labelAuthor"/>
    <TextView
            android:textColor="@android:color/holo_blue_bright"

            android:text="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPhoneNo"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFinish" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="72dp"/>


    <ImageView
            android:layout_width="0dp"
            android:layout_height="14dp" app:srcCompat="@drawable/dotted_line"
            android:id="@+id/imageView2"
            android:background="@android:color/holo_blue_bright"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="232dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:textColor="@android:color/holo_blue_bright"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBookId" app:layout_constraintStart_toEndOf="@+id/lblBookID2"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txtPhoneNo"/>
    <TextView
            android:textColor="@android:color/holo_blue_bright"
            android:text="PHONE :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/labelLocation" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>